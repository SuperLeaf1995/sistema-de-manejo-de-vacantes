@page
@model RazorPagesWebServer.Pages.Prospecto.Editar.BaseModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<partial name="Header" />

<h1>Actualizar prospecto</h1>
<form method="post">
    <div>
    <input hidden asp-for="Prospecto.Id" value="@Model.Prospecto.Id" />
    <span class="error" asp-validation-for="Prospecto.Id"></span>
    <br></div>
    
    <div>
    <label for="prospecto-nombre">Nombre:</label>
    <input id="prospecto-nombre" asp-for="Prospecto.Nombre" value="@Model.Prospecto.Nombre" />
    <span class="error" asp-validation-for="Prospecto.Nombre"></span>
    <br></div>

    <div>
    <label for="prospecto-correo">Correo:</label>
    <input id="prospecto-correo" asp-for="Prospecto.Correo" value="@Model.Prospecto.Correo" /><br>
    <span class="error" asp-validation-for="Prospecto.Correo"></span>
    <br></div>

    <div>
    <label for="prospecto-fecha">Fecha:</label>
    <input id="prospecto-fecha" asp-for="Prospecto.Fecha" value="@Model.currentDateTime" /><br>
    <span class="error" asp-validation-for="Prospecto.Fecha"></span>
    <br></div>

    <input type="submit" />
</form>
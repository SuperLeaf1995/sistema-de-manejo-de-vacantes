@page
@model RazorPagesWebServer.Pages.Vacante.Crear.BaseModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<partial name="Header" />

<h1>Crear vacante</h1>
<form method="post">
    <input hidden asp-for="Vacante.Id" value="0" />

    <div>
    <label for="vacante-area">Area:</label>
    <input id="vacante-area" asp-for="Vacante.Area" /><br>
    <span class="error" asp-validation-for="Vacante.Area"></span>
    <br></div>

    <div>
    <label for="vacante-sueldo">Sueldo:</label>
    <input id="vacante-sueldo" asp-for="Vacante.Sueldo" /><br>
    <span class="error" asp-validation-for="Vacante.Sueldo"></span>
    <br></div>

    <div>
    <label for="vacante-activo">Activo:</label>
    <input id="vacante-activo" asp-for="Vacante.Activo" /><br>
    <span class="error" asp-validation-for="Vacante.Activo"></span>
    <br></div>

    <input type="submit" />
</form>
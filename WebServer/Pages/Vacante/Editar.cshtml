@page
@model RazorPagesWebServer.Pages.Vacante.Editar.BaseModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<partial name="Header" />

<h1>Actualizar vacante</h1>
<form method="post">
    <div>
    <input hidden asp-for="Vacante.Id" value="@Model.Vacante.Id" />
    <span class="error" asp-validation-for="Vacante.Id"></span>
    <br></div>

    <div>
    <label for="vacante-area">Area:</label>
    <input id="vacante-area" asp-for="Vacante.Area" value="@Model.Vacante.Area" />
    <span class="error" asp-validation-for="Vacante.Area"></span>
    <br></div>

    <div>
    <label for="vacante-sueldo">Sueldo:</label>
    <input id="vacante-sueldo" asp-for="Vacante.Sueldo" value="@Model.Vacante.Sueldo" />
    <span class="error" asp-validation-for="Vacante.Sueldo"></span>
    <br></div>

    <div>
    <label for="vacante-activo">Activo:</label>
    <input id="vacante-activo" asp-for="Vacante.Activo" value="@Model.Vacante.Activo" />
    <span class="error" asp-validation-for="Vacante.Activo"></span>
    <br></div>

    <input type="submit" />
</form>